<h5><%= Spree.t(:new_return_request) %></h5>
<p class="text-danger mb-5">RX and opened items cannot be returned</p>

<%= form_for [@order, @return_authorization] do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <div class="form-actions" data-hook="buttons" class="">
      <%= button Spree.t(:create), 'save' %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.order_url(@order), icon: 'delete' %>
    </div>
  </fieldset>
<% end %>